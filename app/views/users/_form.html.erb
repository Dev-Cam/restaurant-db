

<% if @user.errors.any?%>
  <ul>
    <% @user.errors.full_messages.each do |e|%>
      <li>
        <%= e %>  
      </li>
      <% end %>
  </ul>
<% end %>


<%= form_with model: @user, local: true, html: { multipart: true } do |f| %>

  <%= f.label :name%>
  <br>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email%>
  <br>
  <%= f.text_field :email %>
  <br>

  <%= f.label :bio%>
  <br>
  <%= f.text_area :bio %>
  <br>

  <%= f.label :password%>
  <br>
  <%= f.password_field :password %>
  <br>

  <%= f.label :password_confirmation%>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.label :image, 'Profile Photo URL'%>
  <br>
  <%= f.file_field :image %>
  <br>



  <%= f. submit 'Signup' %>

<% end %>

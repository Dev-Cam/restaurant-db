<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="header">
      <div class="header-content">
        <h1>The Restaurant db </h1>
        <nav>
          <div class="links">
            
          <% if @current_user.present?%>
            <strong>Welcome, <%= @current_user.name%></strong>
            |
            <%= link_to 'Home', root_path %> 
            |
            <%= link_to 'All Recipes', recipes_path %> 
            |
            <%= link_to 'All Users', users_path %> 
            |
            <%= link_to 'Create Recipe', new_recipe_path %>
            |
            <%= link_to 'Logout', login_path, method: 'delete' %>
            |

          <% else %>
            <%= link_to 'Home', root_path %> 
            |
            <%= link_to 'All Recipes', recipes_path %> 
            |
            <%= link_to 'All Users', users_path %> 
            |
            <%= link_to 'Login', login_path %>
            |
            <%= link_to 'Signup', '/does not exist yet' %>
            |
          <% end %>

          </div>
        </nav>
      </div>
    </div>
    
      <div class="content">
        <%= yield %>
      </div> 
 

  <footer>
    &copy; Not Quite a Food Blog 2022
  </footer>
    
  </body>
</html>
